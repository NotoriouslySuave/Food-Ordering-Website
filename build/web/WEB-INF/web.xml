<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>pending1</servlet-name>
        <servlet-class>servlets.pending1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginAuthentication</servlet-name>
        <servlet-class>servlets.LoginAuthentication</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Signup</servlet-name>
        <servlet-class>servlets.Signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>listfoods</servlet-name>
        <servlet-class>servlets.listfoods</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>orderlist</servlet-name>
        <servlet-class>servlets.orderlist</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>pendinglist</servlet-name>
        <servlet-class>servlets.pendinglist</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>servlets.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteorder</servlet-name>
        <servlet-class>servlets.deleteorder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>pending1</servlet-name>
        <url-pattern>/pending1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginAuthentication</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Signup</servlet-name>
        <url-pattern>/Signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listfoods</servlet-name>
        <url-pattern>/listfoods</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>orderlist</servlet-name>
        <url-pattern>/orderlist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>pendinglist</servlet-name>
        <url-pattern>/pendinglist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteorder</servlet-name>
        <url-pattern>/deleteorder</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
